                    <a href="about.html" class="el_btn">READ MORE</a>
                </div>
                <!-- /.bl_aboutUs_inner -->
            </div>
            <!-- /.bl_aboutUs -->
        </section>

        <section class="ly_section hp_bgGrey hp_skewY3">
            <div class="ly_cont bl_cardUnit__col2 hp_skewY-3">
                <!-- WORKS -->
                <section id="works" class="bl_card">
                    <h2 class="el_lv2Heading">WORKS</h2>
                    <figure class="bl_card_imgWrapper">
                        <img src="./img/works-img@2x.png" alt="works">
                    </figure>
